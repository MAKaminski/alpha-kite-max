# ============================================================================
# üîí SCHWAB API CREDENTIALS (REQUIRED FOR TRADING & DATA)
# ============================================================================
# Get credentials from: https://developer.schwab.com/
# After OAuth flow, tokens are stored in config/schwab_token.json

SCHWAB_CLIENT_ID=your_schwab_client_id_here
SCHWAB_CLIENT_SECRET=your_schwab_client_secret_here
SCHWAB_API_USERNAME=your_schwab_username_here
SCHWAB_API_ACCOUNT_PASS=your_schwab_password_here

# ============================================================================
# üóÑÔ∏è SUPABASE DATABASE CREDENTIALS (REQUIRED)
# ============================================================================
# Get credentials from: https://supabase.com/dashboard/project/_/settings/api

SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ============================================================================
# üìä POLYGON.IO API CREDENTIALS (OPTIONAL - Stock Data Only)
# ============================================================================
# Free tier: 5 calls/min, limited historical data
# Get API key from: https://polygon.io/dashboard/api-keys
# NOTE: Options data requires paid tier - we use Black-Scholes synthetic data instead

POLYGON_API=your_polygon_api_key_here
POLYGON_ACCESS_KEY_ID=your_polygon_access_key_here
POLYGON_SECRET_ACCESS_KEY=your_polygon_secret_key_here
POLYGON_S3_ENDPOINT=https://files.polygon.io
POLYGON_BUCKET=flatfiles

